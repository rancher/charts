#!/bin/bash
set -e

cd $(dirname $0)

source ./version

echo "Pulling in charts-build-scripts version ${CHARTS_BUILD_SCRIPT_VERSION}"

rm -rf ../bin
cd ..

rm -rf charts-build-scripts
git clone --depth 1 --branch $CHARTS_BUILD_SCRIPT_VERSION https://github.com/rancher/charts-build-scripts.git charts-build-scripts 2>/dev/null

cd charts-build-scripts
./scripts/build
mv bin ../bin
cd ..

rm -rf charts-build-scripts
chmod +x ./bin/charts-build-scripts
./bin/charts-build-scripts --version
